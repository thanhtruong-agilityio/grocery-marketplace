{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DBConnection": "Server=grocery_marketplace_mssql;Database=GroceryMarketplaceDB;User Id=SA;Password=Admin@123",
    "RedisCache": "rediscache:6379,abortConnect=false"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "TokenSettings": {
    "SecretKey": "58ded5b0-3fbb-4502-a694-ea831b1fe020",
    "ExpirationInMinutes": "1440"
  },
  "AWS": {
    "Profile": "default",
    "Region": "us-east-1"
  },
  "EmailSettings": {
    "FromEmail": "hieu.ngo@asnet.com.vn"
  },
  "CacheSettings": {
    "SlidingExpirationInMinutes": 60,
    "AbsoluteExpirationInMinutes": 60,
    "Redis": {
      "Host": "localhost",
      "Port": 6379
    }
  }
}